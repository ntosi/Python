import os
import glob
import cv2



# levantar imagenes
images = glob.glob('*.jpg')
images.extend(glob.glob('*.jpeg'))

print('Found files:')
print(images)

#cambiar ancho nada mas
width = 600
print('Ajustando imagenes a %d pixels de ancho' % width)

folder = 'resized_img'
if not os.path.exists(folder):
    os.makedirs(folder)

# resize y guardado
for img in images:
    pic = cv2.imread(img, cv2.IMREAD_UNCHANGED)
    height = int(width * pic.shape[0] / pic.shape[1])
    pic = cv2.resize(pic, (width, height))
    cv2.imwrite(folder + '/' + img, pic)
